<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lb.yiimgo.drinknote">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="lb.yiimgo.drinknote.ViewPager.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="lb.yiimgo.drinknote.ViewPager.Category.CreateCategory"
            android:label="@string/create_title"
            android:parentActivityName=".ViewPager.Home"/>
        <activity android:name="lb.yiimgo.drinknote.ViewPager.RoomDrink.CreateRoomDrink"
            android:label="@string/create_room_title"
            android:parentActivityName=".ViewPager.Home"/>
    </application>

</manifest>